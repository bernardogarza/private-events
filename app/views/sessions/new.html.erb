<h1>Log-in</h1>
<%= form_for(:session, url: sessions_create_path) do |f| %>
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email %><br>
    <%= f.submit 'Log-in' %>
<% end %>

<% if flash[:errors] %>
  <div>       
    <% flash[:errors].each do |e| %>
      <p><%= e %></p>
    <% end %> 
  </div>
<% end %>